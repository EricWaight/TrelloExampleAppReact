
<h2> Board</h2>
<p>
  <strong>Title:</strong>
  <%= @board.title %>
  <strong>Description:</strong>
  <%= @board.description %>
</p>

<h2>Statuses</h2>
<%= render @board.statuses %>
 
<h2>Add a Status:</h2>
<%= form_for([@board, @board.status.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p> 
<% end %>

<%= link_to 'Back', boards_path %>