<%= form_for :board, url: board_path(@board), method: :patch do |f| %>
 
  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@board.errors.count, "error") %> prohibited
        this board from being saved:
      </h2>
